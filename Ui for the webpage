<script>
let isShutdown = false;
let isSessionActive = false;

function createRipple(event, element) {
  const ripple = document.createElement('span');
  ripple.classList.add('ripple');
  
  const rect = element.getBoundingClientRect();
  const size = Math.max(rect.width, rect.height);
  const x = event.clientX - rect.left - size / 2;
  const y = event.clientY - rect.top - size / 2;
  
  ripple.style.width = ripple.style.height = size + 'px';
  ripple.style.left = x + 'px';
  ripple.style.top = y + 'px';
  
  element.appendChild(ripple);
  
  setTimeout(() => ripple.remove(), 600);
}

function toggleCard(num, el) {
  if (isShutdown) return;
  
  createRipple(event, el);
  el.classList.toggle("active");
  
  let state = el.classList.contains("active") ? "on" : "off";
  fetch("/" + state + "?led=" + num);
}

function sessionMode() {
  if (isShutdown) return;
  
  isSessionActive = !isSessionActive;
  const cards = document.querySelectorAll('.card');
  const sessionBtn = document.querySelector('.session');
  
  sessionBtn.classList.toggle('active');
  
  if (isSessionActive) {
    // Turn all lights ON
    cards.forEach((card, index) => {
      setTimeout(() => {
        if (!card.classList.contains('active')) {
          card.classList.add('active');
          fetch("/on?led=" + index);
        }
      }, index * 100);
    });
  } else {
    // Turn all lights OFF
    cards.forEach((card, index) => {
      setTimeout(() => {
        if (card.classList.contains('active')) {
          card.classList.remove('active');
          fetch("/off?led=" + index);
        }
      }, index * 100);
    });
  }
}

function shutdownMode() {
  isShutdown = !isShutdown;
  const body = document.body;
  const cards = document.querySelectorAll('.card');
  const shutdownBtn = document.querySelector('.shutdown-btn');
  const sessionBtn = document.querySelector('.session');
  const cardsContainer = document.querySelectorAll('.card');
  
  shutdownBtn.classList.toggle('active');
  body.classList.toggle('shutdown');
  
  // Hide/show session button and cards
  if (isShutdown) {
    sessionBtn.style.display = 'none';
    cardsContainer.forEach(card => card.style.display = 'none');
    
    // Turn off all lights
    cards.forEach((card, index) => {
      setTimeout(() => {
        if (card.classList.contains('active')) {
          card.classList.remove('active');
          fetch("/off?led=" + index);
        }
      }, index * 80);
    });
    
    // Reset session mode state
    isSessionActive = false;
    sessionBtn.classList.remove('active');
  } else {
    sessionBtn.style.display = '';
    cardsContainer.forEach(card => card.style.display = '');
  }
}

// Add click ripple effect to all interactive elements
document.addEventListener('click', function(e) {
  if (e.target.closest('.mode-btn')) {
    createRipple(e, e.target.closest('.mode-btn'));
  }
});
</script>
</body>
